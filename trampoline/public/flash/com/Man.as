package com {	import flash.display.MovieClip;	import flash.events.Event;		public class Man extends MovieClip {				public var health:int = 30;		public var bounds:Object = {};		public var velocity:Object = {			x:0,			y:0		}		public var minX = 0;		public var maxX = 800;		private var onStage = false;		public var gravity = 20;		public function Man() {			bounds.left = this.x - (this.width/2);			bounds.right = this.x + (this.width/2);			bounds.bottom = this.y + (this.height/2);			bounds.top = this.y - (this.height/2);						this.addEventListener(Event.ADDED_TO_STAGE, addedToStage);		}				private function addedToStage(e){			maxX = this.stage.stageWidth;			onStage = true;		}				public function loop(){			//if( onStage ){				// horizontal movement				this.x = this.x += this.velocity.x;				this.x = Math.max( this.x, 0 );				this.x = Math.min( this.x, stage.stageWidth );								// bounce off the walls				if( this.x <= 0 || this.x >= stage.stageWidth ){					this.velocity.x *= -1				}								//Horizontal Decay				this.velocity.x = this.velocity.x*.95;								// vertical movement				this.y = Math.min(stage.stageHeight, this.y - this.velocity.y + gravity );								//vertical decay (maybe move into Man class)				this.velocity.y = Math.max(0, this.velocity.y-1);			//}		}				public function poop() {			return 'I pooped';		}				public function bounce(){			this.gotoAndPlay('bounce');		}				public function takeDamage( amount ){			health -= amount;			if( health > 0 ){				this.gotoAndPlay('damage');				return false;			}else{				this.gotoAndPlay('death');				return true;			}		}	}	}